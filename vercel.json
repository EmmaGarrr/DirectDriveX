{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
    { "src": "/(.*)\\.(js|css|ico|png|jpg|jpeg|gif|svg)", "dest": "/frontend/dist/$1.$2" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
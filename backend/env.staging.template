# DirectDriveX Staging Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
MONGODB_URI=mongodb://admin:your_staging_mongodb_password@staging-mongo:27017/directdrive
DATABASE_NAME=directdrive

# ===== SECURITY CONFIGURATION =====
# CRITICAL: Generate a UNIQUE secure JWT secret key for staging (minimum 32 characters)
# NEVER use the same secret across environments (dev/staging/production)
# Use this command to generate a secure secret:
# python -c "from app.core.config import Settings; Settings.print_secure_secret_example()"
JWT_SECRET_KEY=your_unique_staging_jwt_secret_minimum_32_chars_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== EMAIL CONFIGURATION =====
# Staging email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_staging_email@gmail.com
SMTP_PASSWORD=your_staging_app_password
SMTP_USE_TLS=true
FROM_EMAIL=your_staging_email@gmail.com
FROM_NAME=DirectDrive Staging

# ===== PASSWORD RESET CONFIGURATION =====
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
FRONTEND_URL=https://staging.yourdomain.com

# ===== GOOGLE OAUTH CONFIGURATION =====
GOOGLE_OAUTH_CLIENT_ID=your_staging_google_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_staging_google_client_secret
GOOGLE_OAUTH_REDIRECT_URI=https://staging.yourdomain.com/auth/google/callback

# ===== GOOGLE DRIVE CONFIGURATION =====
# Staging Google Drive credentials
GDRIVE_ACCOUNT_1_CLIENT_ID=your_staging_client_id
GDRIVE_ACCOUNT_1_CLIENT_SECRET=your_staging_client_secret
GDRIVE_ACCOUNT_1_REFRESH_TOKEN=your_staging_refresh_token
GDRIVE_ACCOUNT_1_FOLDER_ID=your_staging_folder_id

# ===== HETZNER CONFIGURATION =====
HETZNER_WEBDAV_URL=your_staging_webdav_url
HETZNER_USERNAME=your_staging_username
HETZNER_PASSWORD=your_staging_password

# ===== FEATURE FLAGS =====
ENABLE_PARALLEL_UPLOADS=true

# ===== CORS CONFIGURATION =====
# Staging: Allow staging domain and development origins for testing
ALLOWED_ORIGINS=https://staging.yourdomain.com,http://localhost:5000,http://localhost:4200
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-Requested-With

# Debug mode - can be true in staging for debugging
DEBUG=true

# ===== ENVIRONMENT CONFIGURATION =====
ENVIRONMENT=staging

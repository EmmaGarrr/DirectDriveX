# DirectDriveX Development Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
MONGODB_URI=mongodb://localhost:27017/directdrive
DATABASE_NAME=directdrive

# ===== SECURITY CONFIGURATION =====
JWT_SECRET_KEY=your_development_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===== EMAIL CONFIGURATION =====
# For testing, you can use Gmail with App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_test_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=True
FROM_EMAIL=your_test_email@gmail.com
FROM_NAME=DirectDrive System

# ===== PASSWORD RESET CONFIGURATION =====
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
FRONTEND_URL=http://localhost:4200

# ===== GOOGLE DRIVE CONFIGURATION =====
# Add your Google Drive credentials here for testing
GDRIVE_ACCOUNT_1_CLIENT_ID=your_client_id
GDRIVE_ACCOUNT_1_CLIENT_SECRET=your_client_secret
GDRIVE_ACCOUNT_1_REFRESH_TOKEN=your_refresh_token
GDRIVE_ACCOUNT_1_FOLDER_ID=your_folder_id

# ===== HETZNER CONFIGURATION =====
HETZNER_WEBDAV_URL=your_webdav_url
HETZNER_USERNAME=your_username
HETZNER_PASSWORD=your_password

# ===== FEATURE FLAGS =====
ENABLE_PARALLEL_UPLOADS=False
